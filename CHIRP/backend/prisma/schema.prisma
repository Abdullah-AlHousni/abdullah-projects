generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FactCheckStatus {
  PENDING
  RUNNING
  DONE
  ERROR
}

enum FactCheckVerdict {
  VERIFIED
  DISPUTED
  NEEDS_CONTEXT
  INSUFFICIENT_EVIDENCE
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  username     String    @unique
  passwordHash String
  bio          String    @default("")
  chirps       Chirp[]
  likes        Like[]
  comments     Comment[]
  retweets     Retweet[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Chirp {
  id        String     @id @default(cuid())
  content   String     @db.VarChar(280)
  mediaUrl  String?
  mediaType String?
  author    User       @relation(fields: [authorId], references: [id])
  authorId  String
  factCheck FactCheck?
  likes     Like[]
  comments  Comment[]
  retweets  Retweet[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Like {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  chirp     Chirp    @relation(fields: [chirpId], references: [id])
  chirpId   String
  createdAt DateTime @default(now())

  @@unique([userId, chirpId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.VarChar(280)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  chirp     Chirp    @relation(fields: [chirpId], references: [id])
  chirpId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Retweet {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  chirp     Chirp    @relation(fields: [chirpId], references: [id])
  chirpId   String
  createdAt DateTime @default(now())

  @@unique([userId, chirpId])
}

model FactCheck {
  id            String            @id @default(cuid())
  chirp         Chirp             @relation(fields: [chirpId], references: [id])
  chirpId       String            @unique
  status        FactCheckStatus   @default(PENDING)
  verdict       FactCheckVerdict?
  confidence    Float?
  summary       String?           @db.Text
  citationsJson Json?
  checkedAt     DateTime?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}
